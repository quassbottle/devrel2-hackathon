// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  //url      = env("SHADOW_DATABASE_URL")
  url      = env("DATABASE_URL") 
}

enum Role {
  default
  moderator
  admin
}

enum ModerationStatus {
  todo
  accepted
  declined
}

enum EventStatus {
  in_progress
  running
  completed
}

model CompanyInvite {
  uuid String @db.Uuid @id @default(dbgenerated("gen_random_uuid()"))

  created_at DateTime @default(now())
  valid_until DateTime @default(dbgenerated("now() + interval '7 days'"))

  enabled Boolean @default(true)

  company CompanyDetails @relation(fields: [company_id], references: [id])
  company_id Int
}

model Account {
  id Int @id @default(autoincrement())

  email    String @unique
  password String
  role     Role

  user    UserDetails?
  company CompanyDetails?
}

model UserDetails {
  id Int @id @default(autoincrement())

  username String @unique

  first_name  String
  middle_name String
  last_name   String

  city String

  birthdate DateTime @db.Date

  created_at DateTime @default(now())

  account    Account @relation(references: [id], fields: [account_id], onUpdate: Cascade, onDelete: Cascade)
  account_id Int     @unique

  company    CompanyDetails? @relation(references: [id], fields: [company_id])
  company_id Int?

  events Event[]

  tags UserTag[]
}

model CompanyDetails {
  id Int @id @default(autoincrement())

  title       String
  description String

  city String

  status ModerationStatus @default(todo)

  account    Account @relation(references: [id], fields: [account_id], onUpdate: Cascade, onDelete: Cascade)
  account_id Int     @unique
  
  events Event[]
  employees UserDetails[]
  invites CompanyInvite[]
}

model UserTag {
  id Int @id @default(autoincrement())

  title String

  users UserDetails[]
}

model EventTag {
  id Int @id @default(autoincrement())

  title String

  events Event[]
}

model Event {
  id Int @id @default(autoincrement())

  title String
  description String

  company CompanyDetails @relation(references: [id], fields: [company_id])
  company_id Int

  tags         EventTag[]
  participants UserDetails[]
}
